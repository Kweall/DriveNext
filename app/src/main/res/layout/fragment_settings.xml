<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.03" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.97" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.02" />

        <TextView
            android:id="@+id/textView"
            style="@style/TextAppearance.AppCompat.BoldText.Weight600Sp16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/text_settings"
            app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
            app:layout_constraintStart_toStartOf="@+id/guidelineStart"
            app:layout_constraintTop_toTopOf="@+id/guidelineTop" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="69dp"
            android:layout_height="67dp"
            android:layout_marginTop="42dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_settings_avatar"
            app:layout_constraintStart_toStartOf="@+id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView111"
            style="@style/TextAppearance.AppCompat.BoldText.Weight600Sp14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/text_name_surname"
            android:layout_marginBottom="44dp"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView1"
            app:layout_constraintStart_toEndOf="@+id/imageView1"
            app:layout_constraintTop_toTopOf="@+id/imageView1" />

        <TextView
            android:id="@+id/textView222"
            style="@style/TextAppearance.AppCompat.BaseText.Weight400Sp12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/text_your_email"
            app:layout_constraintStart_toStartOf="@+id/textView111"
            app:layout_constraintTop_toBottomOf="@+id/textView111" />

        <ImageView
            android:id="@+id/right_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chevron_right"
            android:layout_marginRight="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView1"
            app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
            app:layout_constraintTop_toTopOf="@+id/imageView1" />

        <Button
            android:id="@+id/custom_button1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="-8dp"
            android:layout_marginTop="-8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView111" />

        <Button
            android:id="@+id/custom_button"
            style="@style/TextAppearance.AppCompat.BoldText.Weight500Sp14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_taxi"
            android:drawableRight="@drawable/ic_chevron_right"
            android:focusable="true"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:text="@string/text_my_bookings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/custom_button1" />

        <Button
            android:id="@+id/custom_button2"
            style="@style/TextAppearance.AppCompat.BoldText.Weight500Sp14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_bright"
            android:drawableRight="@drawable/ic_chevron_right"
            android:focusable="true"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:text="@string/text_theme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/custom_button" />

        <Button
            android:id="@+id/custom_button3"
            style="@style/TextAppearance.AppCompat.BoldText.Weight500Sp14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_bell"
            android:drawableRight="@drawable/ic_chevron_right"
            android:focusable="true"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:text="@string/text_notifications"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/custom_button2" />

        <Button
            android:id="@+id/custom_button4"
            style="@style/TextAppearance.AppCompat.BoldText.Weight500Sp14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_money"
            android:drawableRight="@drawable/ic_chevron_right"
            android:focusable="true"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:text="@string/text_connect_your_car"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/custom_button3" />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#EDEDED"
            app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
            app:layout_constraintStart_toStartOf="@+id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@id/custom_button4" />

        <Button
            android:id="@+id/custom_button5"
            style="@style/TextAppearance.AppCompat.BoldText.Weight500Sp14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:backgroundTint="@android:color/transparent"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_question"
            android:drawableRight="@drawable/ic_chevron_right"
            android:focusable="true"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:text="@string/text_help"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

        <Button
            android:id="@+id/custom_button6"
            style="@style/TextAppearance.AppCompat.BoldText.Weight500Sp14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_email"
            android:drawableRight="@drawable/ic_chevron_right"
            android:focusable="true"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:text="@string/text_invite_friend"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/custom_button5" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>